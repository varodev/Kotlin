<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado"
    tools:context=".Activity4">


    <Button
        android:id="@+id/btnBack4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="VOLVER ACTIVITY 1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="660dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toTopOf="@+id/btnBack4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.774"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.744"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="60dp"
                android:gravity="center"
                android:text="PERROS"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:columnCount="3"
                app:rowCount="2">

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:layout_column="2"
                    app:layout_row="1"
                    app:srcCompat="@drawable/pastor02" />

                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:layout_column="1"
                    app:layout_row="1"
                    app:srcCompat="@drawable/pastor01" />

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:layout_column="0"
                    app:layout_row="1"
                    app:srcCompat="@drawable/mastin02" />

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:layout_column="2"
                    app:layout_row="0"
                    app:srcCompat="@drawable/mastin01" />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:layout_column="1"
                    app:layout_row="0"
                    app:srcCompat="@drawable/collie02" />

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:layout_column="0"
                    app:layout_row="0"
                    app:srcCompat="@drawable/collie01" />

            </androidx.gridlayout.widget.GridLayout>
        </LinearLayout>




    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>